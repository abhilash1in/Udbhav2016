<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@color/oldColorPrimaryDark"
    card_view:cardCornerRadius="0dp"
    android:padding="5dp"
    >
    <!--card_view:cardElevation="4dp"
    card_view:cardCornerRadius="2dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardPreventCornerOverlap="false"-->


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp">

        <ImageView
            android:id="@+id/card_item_icon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:padding="20dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_launcher"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:alpha="0.6"

            />
        <TextView
            android:id="@+id/card_item_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/card_item_icon"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="5dp"
            android:textSize="18sp"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/card_item_icon"
            android:textColor="@android:color/white"
            android:text="Item name comes here"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:scrollHorizontally="true"/>

        <!--android:ellipsize="marquee"
        android:marqueeRepeatLimit ="marquee_forever"-->

    </RelativeLayout>
    </android.support.v7.widget.CardView>