<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/about_scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="?attr/actionBarSize">
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="50dp">
    <!--android:paddingBottom="?attr/actionBarSize"-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/schedule"
                android:layout_marginTop="30sp"
                android:layout_width="200sp"
                android:layout_height="80sp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/schedule"/>
            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="For more updates, follow us on:"
                android:textSize="20sp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="5dp"
                android:singleLine="true"
                android:layout_below="@id/schedule"/>
            <LinearLayout
                android:id="@+id/image_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                android:padding="20dp">
                <Button
                    android:id="@+id/fb"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@mipmap/fb"/>
                <Button
                    android:id="@+id/snapchat"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:background="@mipmap/snap"/>


            </LinearLayout>
            <TextView
                android:visibility="gone"
                android:id="@+id/contactUs"
                android:layout_below="@id/image_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Contact us:"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="5dp"/>
            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/contact_content"
                android:layout_below="@id/contactUs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/fest_management"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fest Management:"
                    android:textSize="20sp"
                    android:layout_marginTop="20sp"
                    android:layout_marginLeft="30sp"/>
                <RelativeLayout
                    android:id="@+id/fest_names"
                    android:layout_below="@id/fest_management"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:layout_marginLeft="40dp"
                        android:text="Trivikram Ramesh"
                        android:layout_alignParentStart="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"

                        android:text="+917760626409"
                        android:layout_marginRight="30dp"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>

                <TextView
                    android:id="@+id/event_management"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/fest_names"
                    android:text="Event Management:"
                    android:textSize="20sp"
                    android:layout_marginTop="20sp"
                    android:layout_marginLeft="30sp"/>
                <RelativeLayout
                    android:id="@+id/event_names"
                    android:layout_below="@id/event_management"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:layout_marginLeft="40dp"
                        android:text="Srinath Kannan"
                        android:layout_alignParentStart="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:text="+918095425094"
                        android:layout_marginRight="30dp"
                        android:layout_alignParentEnd="true"/>

                </RelativeLayout>

                <TextView
                    android:id="@+id/reg_management"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/event_names"
                    android:text="REGISTRATION AND RESULTS"
                    android:textSize="20sp"
                    android:layout_marginTop="20sp"
                    android:layout_marginLeft="30sp"/>
                <RelativeLayout
                    android:id="@+id/reg_names"
                    android:layout_below="@id/reg_management"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:layout_marginLeft="40dp"
                        android:text="Tejaswini Earanna"
                        android:layout_alignParentStart="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:text="+919742406262"
                        android:layout_marginRight="30dp"
                        android:layout_alignParentEnd="true"/>

                </RelativeLayout>

            </RelativeLayout>
        <!--<TextView
            android:id="@+id/tvinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sponsors and other details comes here"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal"/>-->
        </RelativeLayout>
</RelativeLayout>
</ScrollView>

